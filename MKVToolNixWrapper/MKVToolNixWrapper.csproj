<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
	<UseWindowsForms>true</UseWindowsForms>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <ApplicationIcon>Assets\Berserk.ico</ApplicationIcon>
    <AssemblyVersion>1.1</AssemblyVersion>
    <FileVersion>1.1</FileVersion>
    <NeutralLanguage>aa</NeutralLanguage>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Assets\Info.txt" />
    <None Remove="Assets\SH2Menu.wav" />
    <None Remove="Assets\SH3Menu.wav" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="Assets\Berserk.ico" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Assets\Info.txt" />
  </ItemGroup>

</Project>
